generator js_client {
  provider = "prisma-client-js"
  output   = "c:/Users/luyza/Documents/ProSpectraWeb/frontend/src/generated/client"
}

generator py_client {
  provider             = "prisma-client-py"
  recursive_type_depth = "5"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  username String @unique(map: "User_username_key")
  password String
  userType String @default("produtor")
}

model filter {
  id         Int      @id @default(autoincrement())
  name       String
  type       String
  parameters Json
  createdAt  DateTime @default(now())
}

model predictions {
  id               Int      @id @default(autoincrement())
  name             String
  model_name       String
  spectral_data_id Int
  prediction       Float
  createdAt        DateTime @default(now())
  attribute        String?
}

model predictivemodel {
  id              Int      @id @default(autoincrement())
  model_name      String
  variety         String
  attribute       String
  hyperparameters Json
  metrics         Json
  model           String?
  graph           Json
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model spectra {
  id        Int      @id @default(autoincrement())
  name      String
  content   Json
  variety   String
  datetime  DateTime
  local     String
  filter    String?
  graph     String?  @db.LongText
  createdAt DateTime @default(now())
}

model spectrumdata {
  id          Int      @id @default(autoincrement())
  dataset     String
  wavelengths Json
  X           Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  image       Json
}

model targetdata {
  id        Int      @id @default(autoincrement())
  attribute String
  y         Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model variety {
  id          Int    @id @default(autoincrement())
  name        String
  description String @db.Text
  attributes  Json
}
