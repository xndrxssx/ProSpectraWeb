generator js_client {
  provider = "prisma-client-js"
}

generator py_client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  username  String   @unique(map: "User_username_key")
  password  String
  userType  String   @default("produtor")
}

model Variety {
  id          Int      @id @default(autoincrement())
  name        String
  description String   @db.Text
  attributes  Json     @default("[]") // Adicionando um valor padr√£o (array vazio)
}

model Filter {
  id         Int      @id @default(autoincrement())
  name       String
  type       String   // 'MSC', 'SNV', ou 'SG'
  parameters Json
  createdAt  DateTime @default(now())
}

model Spectra {
  id          Int      @id @default(autoincrement())
  name        String
  content    Json  // Para armazenar os dados espectrais
  variety   String
  datetime        DateTime
  local       String
  filter      String?
  graph     String?
  createdAt    DateTime @default(now())
}